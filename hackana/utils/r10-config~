#! /bin/sh
# r10-config.  


prefix=${R10SYS}/utils
exec_prefix=${prefix}
includedir=${prefix}/include

usage()
{
    cat  <<EOF
Usage: r10-config [OPTION]

Known values for OPTION are:

  --prefix              show installation prefix
  --cxx                 print C++ compilation command
  --cc                  print C compilation command
  --cpp                 print pre-processor commands
  --include             print include path
  --ldflags             print linker flags
  --libs                print libraries to link against
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*)
        optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'`
	;;
    *) 
        optarg=
	;;
    esac

    case "$1" in
    --prefix)
	echo ${prefix}
	;;

    --version)
	echo  
	exit 0
	;;

    --help)
	usage 0
	;;

    --cxx)
       	echo g++ -g -Wall 
       	;;

    --cc)
       	echo gcc -g -O2
       	;;

    --cpp)
       	echo "CPP:    " gcc -E 
       	echo "CXXCPP: " g++ -E 
       	;;

    --include)
       	echo "-I${ROOTSYS}/include -I${R10SYS}/utils -I${R10SYS}/utils/ana10 "
       	;;

    --ldflags)
       	echo   
       	;;

    --libs)
        # do not use -lMath
	rlibs="-L${ROOTSYS}/lib -lCore -lCint -lHist -lGraf -lGraf3d -lGpad -lTree -lRint -lPostscript -lMatrix -lPhysics -lMinuit -lRooFit -lHtml -lMathMore -lFoam"
       	echo "-L${R10SYS}/utils/lib -lrootana_utils $rlibs -L/usr/lib -lg2c -pthread -lm -ldl -rdynamic"
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0

